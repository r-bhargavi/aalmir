<odoo>
    	<record id="product_product_form_inheriten_aalmir" model="ir.ui.view">
		<field name="name">Product product Form Aalmir</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_normal_form_view"/>
		<field name="arch" type="xml">
                 <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="open_inventory_location" icon="fa-object-group" groups="stock.group_stock_user">
                    	<field name="bin_location_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="open_master_batches" icon="fa-outdent" groups="stock.group_stock_user">
                    	<field name="master_btch_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="open_child_batches" icon="fa-database" >
                    	<field name="batches_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="n_open_pricelist" icon="fa-list" attrs="{'invisible':[('n_pricelist_count','=',0)]}" > 
                        <field string="Customers" name="n_pricelist_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" name="n_action_view_quotations" type="object" icon="fa-usd" attrs="{'invisible':[('quotation_count','=',0)]}">
                        <field string="Quotations" name="quotation_count" widget="statinfo" />
                    </button>
                    <button class="oe_stat_button" name="%(purchase.action_purchase_line_product_tree)d"
                       type="action" icon="fa-shopping-cart">
                       <field string="Purchases" name="purchase_count" widget="statinfo"/>
                   </button>
                </div>
   		</field>
	</record>
</odoo>

