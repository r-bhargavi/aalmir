<?xml version="1.0"?>
<odoo>
     <!-- Start Inherit Product tree view -->
	<record id="product_template_tree_view_inherite" model="ir.ui.view">
		<field name="name">product Template Tree view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view"/>
		<field name="arch" type="xml">
                      <field name="type" position='replace' />
                      <!--<field name="volume" position='replace' />-->
                      <field name="volume" position='replace'>
		     		<field name="qty_reserved"/>
		     		<field name="uom_id" invisible="not context.get('msq')"/>
		     		<field name="reordering_min_qty" string="Minimum Stock Qty" invisible="not context.get('msq')"/>
                      </field>
                      <field name="standard_price" position='attributes'>
                      		<attribute name='group'>gt_order_mgnt.group_sale_support</attribute>
                      </field>
                </field>
        </record>
      <!-- End Inherit Tree view -->
 
	<record id="order_view_reserve_product_qty_tree" model="ir.ui.view">
            <field name="name">reserve.product_qty</field>
            <field name="model">n.reserve.productqty</field>
            <field name="arch" type="xml">
                <tree string="Sales Order Lines" create="false">
                    <field name="product_id"/>
                    <field name="order_id"/>
                    <field name="order_partner_id"/>
                    <field name="line_id" invisible="1"/>
                    <field name="salesman_id"/>
                    <field name="reserve_qty" string="Qty" sum="Total" />
		    <field name="sale_reserve_qty" invisible="1"/>
                    <field name="qty_delivered" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Stoc Quant inherite -->
	<record id="view_stock_quant_tree_inherite_api" model="ir.ui.view">
		<field name="name">Stock Quant</field>
		<field name="model">stock.quant</field>
		<field name="inherit_id" ref="stock.view_stock_quant_tree"/>
		<field name="arch" type="xml">
                      <field name="reservation_id" position='attributes'>
			     <attribute name="invisible">0</attribute>
                      </field>
                </field>
           </record>
      <!-- End Inherit Tree view -->
      
	<record id="product_packaging_view_inherite" model="ir.ui.view">
		<field name="name">Product Packaging</field>
		<field name="model">product.packaging</field>
		<field name="inherit_id" ref="product.product_packaging_form_view"/>
		<field name="arch" type="xml">
		    <field name="name" position="attributes">
		    	   <attribute name="invisible">1</attribute>
		    </field>
		    <field name="qty" position="after">
		    	<field name="pkgtype" required="1" />
			<field name="unit_id" domain="[('unit_type.string','!=','product')]" required="1" options="{'no_create': True, 'no_open': True}"/>
			<field name="uom_id" string="Packaging Type" required="1" options="{'no_create': True, 'no_open': True,'create':False}"/>
		    </field>
		</field>
	</record>

        <record id="product_packaging_tree_view_aalmir" model="ir.ui.view">
		<field name="name">Product Packaging Tree</field>
		<field name="model">product.packaging</field>
		<field name="inherit_id" ref="product.product_packaging_tree_view"/>
                <field name="arch" type="xml">
		    <field name="qty" position="after">
		    	<field name="pkgtype" />
			<field name="unit_id" />
			<field name="uom_id"/>
                        <field name='product_tmpl_id'/>
		    </field>
		</field>
	</record>
	<record id="product_template_form_view_procurement_inherite" model="ir.ui.view">
		<field name="name">Product Form</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
		<field name="arch" type="xml">
		       <button name="%(stock.action_view_change_product_quantity)d" position="attributes">
			     <attribute name="class">oe_highlight</attribute>
		     	     <attribute name="invisible">1</attribute>
			     <attribute name="groups">stock.group_stock_manager</attribute>
		       </button>
		       <button  name="%(stock.act_make_procurement)d" position="attributes">
			     <attribute name="class">oe_highlight</attribute>
			     <attribute name="groups">stock.group_stock_manager</attribute>
		       </button>
		       <button  name="%(stock.act_make_procurement)d" position="after">
			     <button name="make_manufacture" groups="stock.group_stock_manager" string="Manufacture Request" type="object" class="oe_highlight"/>
		       </button>
		</field>
	</record>

	<record id="product_template_only_form_view_api_inherit_package" model="ir.ui.view">
		<field name="name">Product Form Package</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
